# ===========================================
# REQUIRED - App will not start without these
# ===========================================

# PostgreSQL Database URL
DATABASE_URL="postgresql://user:password@localhost:5432/typeflow"

# JWT Secret for authentication (use a strong random string)
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# Encryption key for credentials (32 bytes / 64 hex characters recommended)
ENCRYPTION_KEY="your-encryption-key-change-this-in-production"


# ===========================================
# OPTIONAL - Have sensible defaults
# ===========================================

# Redis connection URL (for background job queue)
REDIS_URL="redis://localhost:6379"

# Server port
PORT=3000

# Environment: development | production | test
NODE_ENV="development"

# Log level: trace | debug | info | warn | error | fatal
LOG_LEVEL="info"

# Enable background worker queue (true/false)
ENABLE_WORKER_QUEUE="false"

# Worker process concurrency
WORKER_CONCURRENCY=5

# Demo mode (disables some features)
NEXT_PUBLIC_DEMO_MODE="false"
